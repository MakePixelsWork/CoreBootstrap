{
  "css.format.enable": false,
  "css.format.newlineBetweenRules": false,
  "css.format.newlineBetweenSelectors": false,
  "css.format.spaceAroundSelectorSeparator": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.associations": {
    "*.inc": "html"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "html.format.wrapLineLength": 0,
  "liveSassCompile.settings.excludeList": [
    "**/node_modules/**",
	"**/template/src/less/**",
	"**/template/src/sass/bootstrap/**",
	"**/template/src/sass/font-awesome/**",
	"**/template/src/setup/**",
    ".vscode/**"
  ],
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/template/public/css/"
    }
  ],
  // Switched off, because you need to learn JavaScript
  // "javascript.format.enable": false,
  "scss.format.enable": false,
  "scss.format.newlineBetweenRules": false,
  "scss.format.newlineBetweenSelectors": false,
  "scss.format.spaceAroundSelectorSeparator": false
}
